<%- include('./partials/navbar') %> 
  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <div class="col-lg-3">

        <h1 class="my-4">Maneki Neko Cell</h1>
        <div class="list-group">
          <a href="/products/Apple" class="list-group-item">Apple</a>
          <a href="/products/Samsung" class="list-group-item">Samsung</a>
          <a href="/products/Xiaomi" class="list-group-item">Xiaomi</a>
          <a href="/products/Oppo" class="list-group-item">Oppo</a>
        </div>

      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9"><br>

        <div class="row">
          <% data.forEach(el => { %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <a href="/products/<%= `${el.brand}/${el.id}` %>"><img class="card-img-top" src="<%= el.url %> "></a>
                <div class="card-body">
                  <h4 class="card-title">
                    <a href="/products/<%= `${el.brand}/${el.id}`%>"><%= el.product_name %> </a>
                  </h4>
                  <h5><%= el.formatRupiah() %></h5>
                  <p class="card-text"><%= el.description %> </p>
                </div>
                <div class="card-footer">
                  <small class="text-muted"><%= el.product_name %></small>
                </div>
              </div>
            </div>
          <% }) %> 
        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

  <!-- Footer -->

<%- include('./partials/footer') %> 